<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Aluminium.MainPage"
             Title=""
             BackgroundColor="#1A1A1A">
    <!-- Dark background -->

    <!-- Main Layout -->
    <Grid RowDefinitions="Auto,*,Auto" Padding="20" RowSpacing="20">

        <!-- Header -->
        <Label Text="Aluminium Remote" 
               FontSize="28" 
               FontAttributes="Bold" 
               TextColor="#FDFDFD"
            HorizontalOptions="Center" 
               VerticalOptions="Center" 
               Grid.Row="0" />

            <!-- Content -->
            <StackLayout Grid.Row="1" Spacing="20">

                <!-- IP Address Input -->
                <Entry x:Name="IpAddressEntry" 
                   Placeholder="Enter Server IP Address" 
                   PlaceholderColor="#888888" 
                   TextColor="#FFFFFF" 
                   BackgroundColor="#2E2E2E" 
                   HorizontalOptions="FillAndExpand" 
                   HeightRequest="50" 
                   Margin="0,0,0,10" />

                <!-- Connect Button -->
                <Button Text="Connect" 
                    BackgroundColor="#8A2BE2"
                    TextColor="#FFFFFF" 
                    CornerRadius="25" 
                    HeightRequest="50" 
                    Clicked="OnConnectClicked" />

                    <!-- Control Buttons -->
                    <Grid ColumnDefinitions="*,*,*,*" ColumnSpacing="10">
                        <Button Text="⛶"
                            BackgroundColor="#1E90FF"
                            TextColor="#FFFFFF" 
                        CornerRadius="25" 
                        HeightRequest="50" 
                        Clicked="OnFullscreenClicked" 
                        IsEnabled="False" 
                        x:Name="FullscreenButton" 
                        Grid.Column="0" />

                            <Button Text="⏯️" 
                                BackgroundColor="#1E90FF"
                                TextColor="#FFFFFF" 
                        CornerRadius="25" 
                        HeightRequest="50" 
                        Clicked="OnPlayPauseClicked" 
                        IsEnabled="False" 
                        x:Name="PlayPauseButton" 
                        Grid.Column="1" />

                                <Button Text="⏩"
                                    BackgroundColor="#1E90FF"
                                   
                                    TextColor="#FFFFFF" 
                        CornerRadius="25" 
                        HeightRequest="50" 
                        Clicked="OnForwardClicked" 
                        IsEnabled="False" 
                        x:Name="ForwardButton" 
                        Grid.Column="2" />

                                    <Button Text="⏪" 
                                        BackgroundColor="#1E90FF"
                                        
                                        TextColor="#FFFFFF" 
                        CornerRadius="25" 
                        HeightRequest="50" 
                        Clicked="OnBackwardClicked" 
                        IsEnabled="False" 
                        x:Name="BackwardButton" 
                        Grid.Column="3" />
                    </Grid>

                    <!-- Status Label -->
                    <Label x:Name="StatusLabel" 
                   Text="Disconnected" 
                   FontSize="16" 
                   TextColor="#888888" 
                   HorizontalOptions="Center" 
                   Margin="0,10,0,0" />
            </StackLayout>

            <!-- Footer -->
            <Label Text="Aluminium - Made by @dejvis._" 
               FontSize="14" 
               TextColor="#FFFFFF" 
              HorizontalOptions="Center" 
               VerticalOptions="End" 
               Grid.Row="2" />
    </Grid>

</ContentPage>