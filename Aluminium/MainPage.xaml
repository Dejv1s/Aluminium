<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Aluminium.MainPage"
             Title="Aluminium Remote"
             BackgroundColor="#121212">

    <!-- Main Layout -->
    <Grid RowDefinitions="Auto,*,Auto" Padding="20" RowSpacing="20">

        <!-- Header -->
        <Label Text="Aluminium Remote" 
               FontSize="32" 
               FontAttributes="Bold" 
               TextColor="#FFFFFF"
               HorizontalOptions="Center" 
               VerticalOptions="Center" 
               Grid.Row="0" />

        <!-- Content -->
        <StackLayout Grid.Row="1" Spacing="20">

            
            <Frame BackgroundColor="#1E1E1E" 
                   CornerRadius="10" 
                   Padding="15" 
                   HorizontalOptions="FillAndExpand">
                <Entry x:Name="IpAddressEntry" 
                       Placeholder="Enter Server IP Address" 
                       PlaceholderColor="#888888" 
                       TextColor="#FFFFFF" 
                       BackgroundColor="Transparent" 
                       HorizontalOptions="FillAndExpand" 
                       HeightRequest="50" />
            </Frame>

            <!-- Connect Button -->
            <Button Text="Connect" 
                    BackgroundColor="#1E90FF"
                    TextColor="#FFFFFF" 
                    CornerRadius="25" 
                    HeightRequest="50" 
                    Clicked="OnConnectClicked" />

            
            <Grid ColumnDefinitions="*,*,*,*" ColumnSpacing="10">
                <Button Text="⛶"
                        BackgroundColor="#8A2BE2"
                        TextColor="#FFFFFF" 
                        CornerRadius="25" 
                        HeightRequest="50" 
                        Clicked="OnFullscreenClicked" 
                        IsEnabled="False" 
                        x:Name="FullscreenButton" 
                        Grid.Column="0" />

                <Button Text="⏯️" 
                        BackgroundColor="#8A2BE2"
                        TextColor="#FFFFFF" 
                        CornerRadius="25" 
                        HeightRequest="50" 
                        Clicked="OnPlayPauseClicked" 
                        IsEnabled="False" 
                        x:Name="PlayPauseButton" 
                        Grid.Column="1" />

                <Button Text="⏩"
                        BackgroundColor="#8A2BE2"
                        TextColor="#FFFFFF" 
                        CornerRadius="25" 
                        HeightRequest="50" 
                        Clicked="OnForwardClicked" 
                        IsEnabled="False" 
                        x:Name="ForwardButton" 
                        Grid.Column="2" />

                <Button Text="⏪" 
                        BackgroundColor="#8A2BE2"
                        TextColor="#FFFFFF" 
                        CornerRadius="25" 
                        HeightRequest="50" 
                        Clicked="OnBackwardClicked" 
                        IsEnabled="False" 
                        x:Name="BackwardButton" 
                        Grid.Column="3" />
            </Grid>

            
            <Label x:Name="StatusLabel" 
                   Text="Disconnected" 
                   FontSize="16" 
                   TextColor="#888888" 
                   HorizontalOptions="Center" 
                   Margin="0,10,0,0" />
        </StackLayout>

        <!-- Footer -->
        <Grid Grid.Row="2" ColumnDefinitions="*,Auto,*" VerticalOptions="End">
            
            <Label Text="" Grid.Column="0" />

            
            <Label Text="Aluminium - Made by @dejvis._" 
           FontSize="14" 
           TextColor="#FFFFFF" 
           HorizontalOptions="Center" 
           VerticalOptions="Center" 
           Grid.Column="1" />

            
            <Button Text="⚙️" 
            BackgroundColor="Transparent" 
            TextColor="#1E90FF" 
            FontSize="20" 
            HorizontalOptions="End" 
            VerticalOptions="Center" 
            Clicked="OnSettingsClicked" 
            Grid.Column="2" />
        </Grid>
    </Grid>
</ContentPage>